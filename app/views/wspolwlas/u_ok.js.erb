$('#wspolwlafd').dialog('close');

$( ".komunikat_ws" ).dialog({
              autoOpen: false,
              maxWidth:450,
              maxHeight: 220,
              width: 450,
              height: 220,
              modal: true,
              buttons:[
                      {
                        id:"ok_kom_ws",
                        text: "Ok",
                        click: function() {
                          $('.komunikat_ws').dialog("close");
                          $.ajax({url: 'polisa/rysuj_ws/',
                            //data:{polisa_id:$('#idpolisy').text()},
                            type:'POST',
                            success: function(data){
                              $('.freezetable-body > #t_wspol tbody').html(data);
                            }
                          });
                        }
                      }
                    ]
});

$("#ok_kom_ws").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#ok_kom_ws").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#ok_kom_ws').removeClass();
$('#ok_kom_ws').addClass('btn btn-success btn-sm');

$('.komunikat_ws').html("<%= escape_javascript (render partial: 'u_ok') %>");
$('.komunikat_ws').dialog( "open" );
