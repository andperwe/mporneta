$( ".komunikat_poj" ).dialog({
              autoOpen: false,
              maxWidth:450,
              maxHeight: 220,
              width: 450,
              height: 220,
              modal: true,
              buttons:[
                      {
                        id:"ok_kom_rodzaj",
                        text: "Ok",
                        click: function() {
                          $('.komunikat_poj').dialog("close");
                          $('.komunikat_poj').empty();
                        }
                      }
                    ]
});

$("#ok_kom_rodzaj").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#ok_kom_rodzaj").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#ok_kom_rodzaj').removeClass();
$('#ok_kom_rodzaj').addClass('btn btn-primary btn-sm');

