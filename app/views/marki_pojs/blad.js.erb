$( ".komunikat_poj" ).dialog({
              autoOpen: false,
              maxWidth:450,
              maxHeight: 220,
              width: 450,
              height: 220,
              modal: true,
              buttons:[
                      {
                        id:"b_kom_marka",
                        text: "Ok",
                        click: function() {
                          $('.komunikat_poj').dialog("close");
                        }
                      }
                    ]
});

$("#b_kom_marka").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#b_kom_marka").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#b_kom_marka').removeClass();
$('#b_kom_marka').addClass('btn btn-danger btn-sm');


$('.komunikat_poj').html("<%= escape_javascript (render partial: 'blad') %>");
$('.komunikat_poj').dialog( "open" );
