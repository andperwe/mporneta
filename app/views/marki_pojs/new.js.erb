$( ".markaf" ).dialog({
              autoOpen: false,
              maxWidth:300,
              maxHeight: 250,
              width: 300,
              height: 250,
              modal: true,
              buttons:[
                      {
                        id:"dodaj_mar",
                        text: "Dodaj",
                        click: function() {
                          $('#new_marki_poj').submit();
                        }
                      }
                    ]
});

$("#dodaj_mar").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#dodaj_mar").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#dodaj_mar').removeClass();
$('#dodaj_mar').addClass('btn btn-primary btn-sm');

$('.markaf').html("<%= escape_javascript (render partial: 'form') %>");
$('.markaf').dialog( "open" );
