$('#marka').val($('#marki_poj_marka').val().toUpperCase());
$.ajax({
   url:'marki_poj/szukaj_marka/',
   type:'POST',
   dataType : 'json',
   data:{marka:$('#marki_poj_marka').val()},
   success: function(data) {
       $('#marka_f').val(data.id);
  }
});

$(".markaf").dialog("close");

$( ".komunikat_poj" ).dialog({
              autoOpen: false,
              maxWidth:450,
              maxHeight: 220,
              width: 450,
              height: 220,
              modal: true,
              buttons:[
                      {
                        id:"ok_kom_marka",
                        text: "Ok",
                        click: function() {
                          $('.komunikat_poj').dialog("close");
                          $('.komunikat_poj').empty();
                            $('#dodaj_model_b').click();
                        }
                      }
                    ]
});

$("#ok_kom_marka").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#ok_kom_marka").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#ok_kom_marka').removeClass();
$('#ok_kom_marka').addClass('btn btn-primary btn-sm');

$('.komunikat_poj').html("<%= escape_javascript (render partial: 'ok') %>");
$('.komunikat_poj').dialog( "open" );
