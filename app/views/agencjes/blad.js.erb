$( "#komunikat_os" ).dialog({
              autoOpen: false,
              maxWidth:420,
              maxHeight: 210,
              width: 420,
              height: 210,
              modal: true,
              buttons:[
                      {
                        id:"ok_kom_ag",
                        text: "Ok",
                        click: function() {
                          $('#komunikat_os').dialog("close");
                        }
                      }
                    ]
});

$("#ok_kom_ag").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#ok_kom_ag").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#ok_kom_ag').removeClass();
$('#ok_kom_ag').addClass('btn btn-danger btn-sm');


$('#komunikat_os').html("<%= escape_javascript (render partial: 'blad') %>");
$('#komunikat_os').dialog( "open" );
