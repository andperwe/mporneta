<% if controller_name != 'sessions' %>
  <%= link_to t(".sign_in", :default => "Zaloguj się"), new_session_path(resource_name), :class => 'alink' %><br />
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to t(".forgot_your_password", :default => "Zapomniałeś hasło?"), new_password_path(resource_name),:class => 'alink' %><br />
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('.didn_t_receive_confirmation_instructions', :default => "Nie chcesz odebrać instrukcji?"), new_confirmation_path(resource_name), :class => 'alink' %><br />
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('.didn_t_receive_unlock_instructions', :default => "Nie chcesz instrukcji do odblokowania?"), new_unlock_path(resource_name),:class => 'alink' %><br />
<% end %>

<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
  <%= link_to t('.sign_in_with_provider', :provider => provider.to_s.titleize, :default => "Zaloguj z #{provider.to_s.titleize}"), omniauth_authorize_path(resource_name, provider), :class => 'alink' %><br />
  <% end %>
<% end %>
