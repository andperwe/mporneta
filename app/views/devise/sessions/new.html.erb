<div style="margin-top:50px;"></div>
<div class="panel panel-default devise-bs" style="margin-left:20%;margin-right:20%;padding:3px;">
  <div class="panel-heading">
    <h4 class="dialog-jq"><%= t('.sign_in', :default => "Sign in") %></h4>
  </div>
  <div class="panel-body">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
    <%= devise_error_messages! %>
  <%= render 'layouts/messages' %>
      <div class="form-group">
        <%= f.label :login, "Login / Email" %>
        <%= f.text_field :login, autofocus: true, placeholder: "Podaj login lub email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Podaj hasło", autocomplete: "off", class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> <%= t('.remember_me', :default => "Zapamiętaj mnie") %>
          <% end %>
        </div>
      <% end %>
      <%= f.submit  t('.sign_in', :default => "Zaloguj"), class: "btn btn-primary btn-sm pull-right" %>
    <% end %>
  </div>
</div>
<div style="margin-left:20%;">
<%= render "devise/shared/links" %>
</div>
