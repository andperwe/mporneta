<fieldset style="width: 95%;margin-left:2%; border:1px solid #000; border-radius: 5px; -moz-border-radius: 15px; background:lightyellow;">
    <div style="margin:4px;" class="row">

       <div class="col-md-4">
        <strong><input type="text" id="t_szukaj_u" placeholder="Szukaj użytkownika" autocomplete="off" class="form-control"></strong>
      </div>
       <div class="col-md-3">
        <button id="pokaz_user" class="btn btn-primary">Pokaż wszystkich użytkowników</button>
      </div>
      <div class="col-md-2">
        <%= button_to('Dodaj użytkownika', new_user_path, :class => 'btn btn-success', :remote => true, :method => :get, :id => "nowy_user")  %>
      </div>
      <div class="col-md-2">
        <%= button_to('Dodaj agencje', new_agencje_path, :class => 'btn btn-success', :remote => true, :method => :get, :id => "nowa_agencja")  %>
      </div>


    </div>

<table id="users-table" class="display tabela" cellspacing="0" data-source="<%= users_path(format: :json) %>">
  <thead style="background-color:ThreeDFace;">
    <tr>
      <th style="padding: 4px 10px !important;"></th>
      <th style="padding: 4px 10px !important;"></th>
      <th style="padding: 4px 10px !important;">id</th>
      <th style="padding: 4px 10px !important;">Nazwa agencji</th>
      <th style="padding: 4px 10px !important;">Funkcja użytkownika</th>
      <th style="padding: 4px 10px !important;">Nazwa użytkownika</th>
      <th style="padding: 4px 10px !important;">Login</th>
      <th style="padding: 4px 10px !important;">email</th>
    </tr>
  </thead>

  <tbody style="font-size:14px;">
  </tbody>
</table>
</fieldset>

<fieldset style="width: 95%; margin-left:2%; margin-top:4px; border:1px solid #000; border-radius: 5px; -moz-border-radius: 15px; background:lightyellow;">
<div style="margin-top:3px;"></div>
<table id="agencjes-table" class="display tabela" cellspacing="0" data-source="<%= agencjes_path(format: :json) %>">
