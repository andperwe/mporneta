$( "#komunikat_p" ).dialog({
              autoOpen: false,
              maxWidth:450,
              maxHeight: 220,
              width: 450,
              height: 220,
              modal: true,
              buttons:[
                      {
                        id:"ok_kom_p",
                        text: "Ok",
                        click: function() {
                          $('#komunikat_p').dialog("close");
                        }
                      }
                    ]
});

$("#ok_kom_p").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#ok_kom_p").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#ok_kom_p').removeClass();
$('#ok_kom_p').addClass('btn btn-danger btn-sm');


$('#komunikat_p').html("<%= escape_javascript (render partial: 'blad') %>");
$('#komunikat_p').dialog( "open" );
