$( "#add_np" ).dialog({
              autoOpen: false,
              maxWidth:600,
              maxHeight: 190,
              width: 600,
              height: 190,
              modal: true,
              buttons:[
                      {
                        id:"dodaj_np",
                        text: "Dodaj",
                        click: function() {
                        if (!puste_pola_np())
                             {
                              powtorkinp($('#nazwy_pol_rodz_pol_id').val());
                            }
                          }
                        }
                    ]
});

$('.np_dane').html("<%= escape_javascript (render partial: 'form') %>");
$('#nazwy_pol_rodz_pol_id').val($('#grupa_ryzyk').val());
$("#dodaj_np").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
