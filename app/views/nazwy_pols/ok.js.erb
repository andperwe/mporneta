$( "#komunikat_os" ).dialog({
              autoOpen: false,
              maxWidth:450,
              maxHeight: 220,
              width: 450,
              height: 220,
              modal: true,
              buttons:[
                      {
                        id:"ok_kom_r",
                        text: "Ok",
                        click: function() {
                          //$('.tbody_RyzykaT').empty();
                          $.ajax({url: 'ryzyka/rysuj_ryzyka/',
                          data:{rodz_pol_id: $('#grupa_ryzyk').val()},
                            success: function(data){
                              $('.freezetable-body > #RyzykaT tbody').html(data);
                              //$('.freezetable-body > #TRyzyka tbody').html(data);
                            }
                          });
                          $('#komunikat_os').dialog("close");
                          $('#add_np').dialog("close");
                        }
                      }
                    ]
});

$("#ok_kom_r").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#ok_kom_r").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#ok_kom_r').removeClass();
$('#ok_kom_r').addClass('btn btn-success btn-sm');

$('#komunikat_os').html("<%= escape_javascript (render partial: 'ok') %>");
$('#komunikat_os').dialog( "open" );
