$( "#komunikat_os" ).dialog({
              autoOpen: false,
              maxWidth:450,
              maxHeight: 220,
              width: 450,
              height: 220,
              modal: true,
              buttons:[
                      {
                        id:"b_oddz",
                        text: "Ok",
                        click: function() {
                          $('#komunikat_os').dialog("close");
                        }
                      }
                    ]
});

$("#b_oddz").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#b_oddz").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#b_oddz').removeClass();
$('#b_oddz').addClass('btn btn-danger btn-sm');


$('#komunikat_os').html("<%= escape_javascript (render partial: 'blad') %>");
$('#komunikat_os').dialog( "open" );
