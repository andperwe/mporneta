$('#add_oddzial').dialog('close');

$( "#komunikat_os" ).dialog({
              autoOpen: false,
              maxWidth:450,
              maxHeight: 220,
              width: 450,
              height: 220,
              modal: true,
              buttons:[
                      {
                        id:"ok_kom_odz",
                        text: "Ok",
                        click: function() {
                          $('#komunikat_os').dialog("close");
                          $.ajax({url: 'agencje/rysuj_oddzial/',
                            data:{agencje_id:$('#oddzial_agencje_id').val()},
                            type:'POST',
                            success: function(data){
                              $('.freezetable-body > #t_oddzial tbody').html(data);
                            }
                          });
                        }
                      }
                    ]
});

$("#ok_kom_odz").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#ok_kom_odz").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#ok_kom_odz').removeClass();
$('#ok_kom_odz').addClass('btn btn-success btn-sm');

$('#komunikat_os').html("<%= escape_javascript (render partial: 'u_ok') %>");
$('#komunikat_os').dialog( "open" );
