    $(this).removeClass("ui-state-focus");
});

$('#oddzial_miasto').change(function(){
  $('#oddzial_miasto').val(pierwsza_d($('#oddzial_miasto').val()));
});

$('#dodaj_oddzial_ok').removeClass();
$('#dodaj_oddzial_ok').addClass('btn btn-success btn-sm');
$('#add_oddzial').dialog( "open" );
