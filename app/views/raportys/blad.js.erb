$( "#komunikat_os" ).dialog({
              autoOpen: false,
              maxWidth:460,
              maxHeight: 230,
              width: 460,
              height: 230,
              modal: true,
              buttons:[
                      {
                        id:"ok_kom_r",
                        text: "Ok",
                        click: function() {
                          $('#komunikat_os').dialog("close");
                        }
                      }
                    ]
});

$("#ok_kom_r").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#ok_kom_r").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#ok_kom_r').removeClass();
$('#ok_kom_r').addClass('btn btn-danger btn-sm');

if (raporty_email == 1){
  $('#komunikat_os').html("<%= escape_javascript (render partial: 'blad') %>");
}
else{
  $('#komunikat_os').html("<%= escape_javascript (render partial: 'bladl') %>");
}
$('#komunikat_os').dialog( "open" );
