if($('#marka_f').val() == 0)
  {
    alert_t("Wybierz wcześniej markę pojazdu !");
  }
  else {


$( ".modelf" ).dialog({
              autoOpen: false,
              maxWidth:300,
              maxHeight: 250,
              width: 300,
              height: 250,
              modal: true,
              buttons:[
                      {
                        id:"dodaj_mod",
                        text: "Dodaj",
                        click: function() {
                          $('#new_model_poj').submit();
                        }
                      }
                    ]
});

$("#dodaj_mod").mouseover(function() {
   $('button').removeClass("ui-state-hover");
});
$("#dodaj_mod").focus(function () {
    $(this).removeClass("ui-state-focus");
});
$('#dodaj_mod').removeClass();
$('#dodaj_mod').addClass('btn btn-primary btn-sm');

$('.modelf').html("<%= escape_javascript (render partial: 'form') %>");
$('#marki_poj_id_f').val($('#marka_f').val());
$('.modelf').dialog( "open" );
}
